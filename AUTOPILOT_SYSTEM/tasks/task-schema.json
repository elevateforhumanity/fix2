{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Autopilot Task",
  "description": "Schema for file-based autopilot tasks",
  "type": "object",
  "required": ["id", "type", "status", "createdAt", "priority"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique task identifier (hash of type + key fields)",
      "pattern": "^[a-f0-9]{16}$"
    },
    "type": {
      "type": "string",
      "description": "Task type identifier",
      "enum": [
        "health-check",
        "auto-heal",
        "auto-push",
        "deploy",
        "build-fix",
        "lint-fix",
        "test-fix",
        "secrets-update",
        "dependency-update",
        "custom"
      ]
    },
    "status": {
      "type": "string",
      "description": "Current task status",
      "enum": ["pending", "running", "completed", "failed", "skipped"]
    },
    "priority": {
      "type": "string",
      "description": "Task priority level",
      "enum": ["low", "medium", "high", "critical"]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when task was created"
    },
    "startedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when task execution started"
    },
    "completedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when task execution completed"
    },
    "lastAttemptAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last execution attempt"
    },
    "cooldownUntil": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp until which task is in cooldown"
    },
    "retryCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of retry attempts"
    },
    "maxRetries": {
      "type": "integer",
      "minimum": 0,
      "default": 3,
      "description": "Maximum number of retry attempts"
    },
    "cooldownMinutes": {
      "type": "integer",
      "minimum": 0,
      "default": 60,
      "description": "Cooldown period in minutes after each attempt"
    },
    "payload": {
      "type": "object",
      "description": "Task-specific data and parameters"
    },
    "result": {
      "type": "object",
      "description": "Task execution result data"
    },
    "error": {
      "type": "object",
      "description": "Error information if task failed",
      "properties": {
        "message": {
          "type": "string"
        },
        "stack": {
          "type": "string"
        },
        "code": {
          "type": "string"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata",
      "properties": {
        "createdBy": {
          "type": "string"
        },
        "workflow": {
          "type": "string"
        },
        "runId": {
          "type": "string"
        },
        "branch": {
          "type": "string"
        }
      }
    }
  }
}
