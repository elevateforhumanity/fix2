{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "github": {
    "silent": true,
    "autoJobCancelation": true
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "VERCEL_FORCE_NO_BUILD_CACHE": "1"
    }
  },
  "redirects": [
    {
      "source": "/:path+/",
      "destination": "/:path+",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/email/scheduler",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/social-media/scheduler",
      "schedule": "0 9,13,17 * * *"
    },
    {
      "path": "/api/email/workflows/processor",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/enrollment-automation",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/weekly-verdicts",
      "schedule": "30 23 * * 0"
    },
    {
      "path": "/api/sam-gov/sync",
      "schedule": "0 6 * * *"
    }
  ],

  "headers": [
    {
      "source": "/admin/:path*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    },
    {
      "source": "/lms/:path*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        }
      ]
    },
    {
      "source": "/program-holder/:path*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    },
    {
      "source": "/staff-portal/:path*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    },
    {
      "source": "/workforce-board/:path*",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ]
}
