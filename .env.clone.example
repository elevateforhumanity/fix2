# ============================================
# CLONE ENVIRONMENT TEMPLATE
# ============================================
# Copy this to .env.local for new clone deployments
# Replace all values with clone-specific credentials
# ============================================

# ============================================
# CLONE IDENTITY (REQUIRED)
# ============================================
CLONE_ORG_SLUG=your-org-slug
CLONE_ORG_NAME=Your Organization Name
CLONE_ADMIN_EMAIL=admin@yourorg.com

# ============================================
# SUPABASE (REQUIRED)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# NEXTAUTH (REQUIRED)
# ============================================
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=https://yourorg.com
NEXT_PUBLIC_SITE_URL=https://yourorg.com

# ============================================
# STRIPE (REQUIRED FOR BILLING)
# ============================================
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your-key

# ============================================
# EMAIL (REQUIRED)
# ============================================
RESEND_API_KEY=re_your-key

# ============================================
# ANALYTICS (OPTIONAL)
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# AI FEATURES (OPTIONAL)
# ============================================
OPENAI_API_KEY=sk-your-key

# ============================================
# REDIS (OPTIONAL)
# ============================================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# ============================================
# AFFIRM (OPTIONAL)
# ============================================
AFFIRM_PUBLIC_KEY=your-public-key
AFFIRM_PRIVATE_KEY=your-private-key
