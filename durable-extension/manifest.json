{
  "manifest_version": 3,
  "name": "Durable Auto-Injector",
  "version": "1.0",
  "description": "Automatically inject enrollment programs into Durable.co sites",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://www.elevateforhumanity.org/*",
    "https://durable.co/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.elevateforhumanity.org/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
