{
  "task": "netlify-deploy",
  "priority": "high",
  "auto_execute": true,
  "description": "Deploy to Netlify and verify configuration",
  "steps": [
    {
      "name": "verify-build",
      "command": "pnpm run build",
      "required": true,
      "timeout": 300
    },
    {
      "name": "verify-dist",
      "command": "bash scripts/verify-build.sh",
      "required": true,
      "timeout": 60
    },
    {
      "name": "check-netlify-config",
      "command": "bash scripts/verify-netlify-config.sh",
      "required": true,
      "timeout": 30
    },
    {
      "name": "trigger-deploy",
      "command": "bash scripts/netlify-api-deploy.sh",
      "required": false,
      "timeout": 600,
      "note": "Requires NETLIFY_AUTH_TOKEN"
    }
  ],
  "success_criteria": {
    "build_exists": true,
    "dist_valid": true,
    "images_present": true,
    "config_valid": true
  },
  "on_success": {
    "commit": true,
    "push": true,
    "message": "Autopilot: Netlify deployment verified and triggered"
  },
  "on_failure": {
    "create_issue": false,
    "notify": false,
    "retry": false
  },
  "metadata": {
    "site_id": "12f120ab-3f63-419b-bc49-430f043415c1",
    "site_name": "elevateproduction",
    "site_url": "https://elevateproduction.netlify.app",
    "created": "2025-11-11T11:00:00Z"
  }
}
