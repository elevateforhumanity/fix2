{
  "task_id": "styling-enforcement",
  "version": "1.0",
  "priority": "high",
  "status": "active",
  "created_at": "2025-11-08T07:00:00Z",
  "description": "Automated styling enforcement and brand consistency",
  "workflow": ".github/workflows/styling-autopilot.yml",
  "schedule": "Every 2 hours",
  "capabilities": [
    "Brand contrast compliance (WCAG AA/AAA)",
    "CSS/SCSS linting and auto-fix",
    "Hardcoded color detection",
    "Tailwind class consistency",
    "Visual regression testing",
    "Lighthouse performance audits",
    "Automatic styling fixes",
    "PR comments with styling feedback",
    "GitHub issue creation for violations"
  ],
  "checks": {
    "brand_contrast": {
      "enabled": true,
      "wcag_level": "AA",
      "min_ratio": 4.5,
      "auto_fix": false,
      "action_on_fail": "create_issue"
    },
    "css_linting": {
      "enabled": true,
      "auto_fix": true,
      "rules": [
        "no-hardcoded-colors",
        "alphabetical-properties",
        "no-duplicate-selectors"
      ]
    },
    "hardcoded_colors": {
      "enabled": true,
      "scan_patterns": ["*.jsx", "*.tsx"],
      "exclude_patterns": ["node_modules", "dist", "build"],
      "action_on_detect": "warn_and_report"
    },
    "tailwind_consistency": {
      "enabled": true,
      "auto_fix": true,
      "checks": [
        "classnames-order",
        "no-contradicting-classname",
        "no-custom-classname"
      ]
    },
    "visual_regression": {
      "enabled": true,
      "trigger": "pull_request",
      "pages": ["/", "/programs", "/lms", "/apply"],
      "max_diff_pixels": 200
    },
    "lighthouse_audit": {
      "enabled": true,
      "trigger": "push",
      "thresholds": {
        "performance": 0.85,
        "accessibility": 0.9,
        "best-practices": 0.85,
        "seo": 0.9
      }
    }
  },
  "auto_fix": {
    "enabled": true,
    "on_push": true,
    "on_schedule": true,
    "actions": [
      "format_css",
      "fix_tailwind_order",
      "apply_prettier",
      "commit_and_push"
    ]
  },
  "reporting": {
    "pr_comments": true,
    "github_issues": true,
    "artifacts": true,
    "summary": true
  },
  "integration": {
    "prettier": true,
    "eslint": true,
    "stylelint": true,
    "playwright": true,
    "lighthouse": true
  },
  "monitoring": {
    "track_metrics": true,
    "alert_on_regression": true,
    "store_history": true
  }
}
