{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true,
    "strictNullChecks": false
  },
  "include": [
    "next-env.d.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "components/ui/**/*.ts",
    "components/ui/**/*.tsx",
    "components/dashboard/**/*.ts",
    "components/dashboard/**/*.tsx",
    "components/lms/**/*.ts",
    "components/lms/**/*.tsx",
    "components/DoceboHeader.tsx",
    "components/GoogleAnalytics.tsx",
    "components/MOUStatusBadge.tsx",
    "components/SignaturePad.tsx",
    "components/StructuredData.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "workers",
    "deployment-ready",
    "supabase/functions",
    ".archive",
    "backend",
    "lib/new-ecosystem-services"
  ]
}
