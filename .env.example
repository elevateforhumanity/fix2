# Required for build (safe placeholders for previews)
PUBLIC_SITE_URL=https://elevateconnectsdirectory.org
VITE_APP_ENV=production
VITE_SUPABASE_URL=https://cuxzzpsyufcewtmicszk.supabase.co
VITE_SUPABASE_ANON_KEY=placeholder_for_preview_builds
VITE_STRIPE_PUBLISHABLE_KEY=placeholder_for_preview_builds
VITE_API_URL=https://cuxzzpsyufcewtmicszk.supabase.co
VITE_SITE_URL=https://elevateconnectsdirectory.org
NODE_ENV=production

# Video Storage Configuration
# Options: 'local', 'cloudflare-stream', 'cloudflare-r2'
STORAGE_TYPE=local

# Cloudflare Configuration
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Cloudflare Stream (Recommended for video hosting)
# https://dash.cloudflare.com/stream
CLOUDFLARE_STREAM_API_TOKEN=your_stream_api_token

# Cloudflare R2 (Alternative: Object storage)
# https://dash.cloudflare.com/r2
CLOUDFLARE_R2_BUCKET=your_r2_bucket_name
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_key
CLOUDFLARE_R2_PUBLIC_URL=https://your-custom-domain.com

# OpenAI API (for text-to-speech)
OPENAI_API_KEY=your_openai_api_key
VITE_OPENAI_API_KEY=your_openai_api_key

# Video API Server
VIDEO_API_PORT=3001

# Sentry Configuration (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Redis Configuration (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your_jwt_secret_here_min_32_characters
JWT_EXPIRES_IN=7d
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
