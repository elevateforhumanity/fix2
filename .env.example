# Elevate for Humanity - Enterprise Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# SECURITY & SESSION MANAGEMENT
# =============================================================================
# Session timeout in minutes (default: 60)
SESSION_MAX_AGE_MINUTES=60

# IP whitelist for admin access (comma-separated, leave empty to disable)
# Example: 127.0.0.1,::1,192.168.1.100
ADMIN_IP_WHITELIST=

# NextAuth secret for session encryption
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# REDIS / CACHING / RATE LIMITING
# =============================================================================
# Redis connection URL (optional, for rate limiting and caching)
# Example: redis://localhost:6379 or redis://user:pass@host:port
REDIS_URL=

# Rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_ORG=
SENTRY_PROJECT=

# =============================================================================
# MULTI-TENANCY & BRANDING
# =============================================================================
# Default branding colors (hex format)
DEFAULT_PRIMARY_COLOR=#0F766E
DEFAULT_SECONDARY_COLOR=#F97316
DEFAULT_LOGO_URL=

# =============================================================================
# EMAIL & NOTIFICATIONS
# =============================================================================
# SMTP configuration for transactional emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@elevateforhumanity.org
SMTP_FROM_NAME=Elevate for Humanity

# SendGrid API key (alternative to SMTP)
SENDGRID_API_KEY=

# =============================================================================
# INTEGRATIONS
# =============================================================================
# Slack webhook for notifications
SLACK_WEBHOOK_URL=

# Microsoft Teams webhook
TEAMS_WEBHOOK_URL=

# Twilio SMS notifications
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_FROM=
TWILIO_TO=

# SendGrid email alerts
SENDGRID_KEY=
SENDGRID_FROM=
ALERT_EMAIL_TO=

# Salesforce integration
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_INSTANCE_URL=

# Workday integration
WORKDAY_TENANT=
WORKDAY_CLIENT_ID=
WORKDAY_CLIENT_SECRET=

# SCORM Cloud integration
SCORM_APP_ID=
SCORM_SECRET_KEY=

# =============================================================================
# SSO & AUTHENTICATION
# =============================================================================
# SAML SSO configuration
SAML_ENTRY_POINT=
SAML_ISSUER=
SAML_CERT=

# OAuth providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# Okta SSO
OKTA_CLIENT_ID=
OKTA_CLIENT_SECRET=
OKTA_ISSUER=

# Azure AD SSO
AZURE_AD_CLIENT_ID=
AZURE_AD_CLIENT_SECRET=
AZURE_AD_TENANT_ID=

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe for payment processing
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 for file uploads (optional, Supabase Storage is default)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# =============================================================================
# VIDEO HOSTING
# =============================================================================
# Vimeo API for video hosting
VIMEO_ACCESS_TOKEN=
VIMEO_CLIENT_ID=
VIMEO_CLIENT_SECRET=

# Wistia API
WISTIA_API_TOKEN=

# =============================================================================
# ANALYTICS
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Mixpanel
NEXT_PUBLIC_MIXPANEL_TOKEN=

# OpenAI for AI features
OPENAI_API_KEY=

# Scheduled reports cron token
REPORT_CRON_TOKEN=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_MARKETING_AUTOMATION=true
FEATURE_EVENTS_MANAGEMENT=true
FEATURE_SSO=true
FEATURE_2FA=true
FEATURE_HR_SYSTEM=true
FEATURE_PAYROLL=true

# =============================================================================
# COMPLIANCE & REPORTING
# =============================================================================
# DOL/DWD reporting endpoints
DOL_REPORTING_API_URL=
DOL_REPORTING_API_KEY=

DWD_REPORTING_API_URL=
DWD_REPORTING_API_KEY=

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=false

# Skip email sending in development
SKIP_EMAIL_SEND=true

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Vercel deployment URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# CDN URL for static assets
NEXT_PUBLIC_CDN_URL=

# Capacitor mobile server URL
CAPACITOR_SERVER_URL=https://elevateconnectsdirectory.org
