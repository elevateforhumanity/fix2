# Environment Variables for Elevate for Humanity Platform
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to GitHub - it's in .gitignore

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
SUPABASE_DB_PASSWORD=your-database-password

# For frontend (Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# APPLICATION FORM
# ============================================
# Google Form URL for program applications
VITE_APPLICATION_FORM_URL=https://docs.google.com/forms/d/e/YOUR_FORM_ID/viewform

# ============================================
# CLOUDFLARE CONFIGURATION
# ============================================
# Get these from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CF_API_TOKEN=your-cloudflare-api-token
CF_ACCOUNT_ID=your-cloudflare-account-id

# Cloudflare Workers URLs
VITE_AGENT_WORKER_URL=https://efh-agent.workers.dev
VITE_ANALYZER_URL=https://efh-autopilot-analyzer.workers.dev
VITE_ORCHESTRATOR_URL=https://efh-autopilot-orchestrator.workers.dev
VITE_AI_STYLIST_URL=https://efh-ai-stylist.workers.dev

# ============================================
# RENDER CONFIGURATION
# ============================================
# Get these from: https://dashboard.render.com/
RENDER_API_KEY=your-render-api-key
RENDER_SERVICE_ID=your-render-service-id
RENDER_DEPLOY_HOOK=https://api.render.com/deploy/your-deploy-hook

# Frontend URL (for CORS)
FRONTEND_URL=https://elevateforhumanity.org
VITE_API_URL=https://elevateforhumanity.org/api

# ============================================
# GOOGLE CLASSROOM AUTOPILOT
# ============================================
# Get these from: https://console.cloud.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_SA_JSON_B64=your-service-account-json-base64-encoded
GOOGLE_IMPERSONATE_EMAIL=admin@yourdomain.com

# ============================================
# JWT & AUTHENTICATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-minimum-64-characters-long

# ============================================
# EMAIL CONFIGURATION
# ============================================
# MailChannels (for Cloudflare Workers)
MAIL_FROM=no-reply@yourdomain.com
MAIL_FROM_NAME=Elevate for Humanity
MAIL_BCC=admin@yourdomain.com

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3001
SITE_TITLE=Elevate For Humanity
SERVICE_TOKEN=efh_internal_token

# ============================================
# OPTIONAL: MONITORING & ANALYTICS
# ============================================
VITE_SENTRY_DSN=your-sentry-dsn
VITE_SENTRY_ENABLED=false
VITE_ENVIRONMENT=production
VITE_APP_VERSION=2.0.0
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# ============================================
# OPTIONAL: STRIPE (if using payments)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# ZAPIER SOCIAL MEDIA AUTOMATION
# ============================================
# Get webhook URLs from your Zapier Zaps
VITE_ZAPIER_FACEBOOK_WEBHOOK=https://hooks.zapier.com/hooks/catch/your-facebook-webhook
VITE_ZAPIER_LINKEDIN_WEBHOOK=https://hooks.zapier.com/hooks/catch/your-linkedin-webhook
VITE_ZAPIER_YOUTUBE_WEBHOOK=https://hooks.zapier.com/hooks/catch/your-youtube-webhook
# Optional: Single webhook for all platforms
VITE_ZAPIER_ALL_PLATFORMS_WEBHOOK=https://hooks.zapier.com/hooks/catch/your-all-platforms-webhook
# Optional: Zapier API key for authentication
VITE_ZAPIER_API_KEY=your-zapier-api-key

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Local Supabase (if using supabase start)
# SUPABASE_URL=http://localhost:54321
# SUPABASE_ANON_KEY=your-local-anon-key

# ============================================
# ANALYTICS & SEO
# ============================================
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GTM_ID=GTM-XXXXXXX
VITE_FACEBOOK_PIXEL_ID=
VITE_HOTJAR_ID=
